        <a  href="{{ url('gallery_index') }}" title="{{ 'all_galleries'|trans }}">
            {{ 'all_galleries'|trans }}
        </a>
    </div>
     <div>
        <a  href="{{ url('tag_index') }}" title="{{ 'all_tags'|trans }}">
            {{ 'all_tags'|trans }}
        </a>
     </div>
    <div>
        <a  href="{{ url('user_index') }}" title="{{ 'user'|trans }}">
            {{ 'my_profile'|trans }}
        </a>
    </div>

