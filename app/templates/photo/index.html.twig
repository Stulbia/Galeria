{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.photo_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.photo_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'photo.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'photo.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'photo.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'photo.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_gallery'|trans, 'gallery.title') }}</th>
{#                <th>{{ 'label.gallery'|trans }}</th>#}
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>

            <a href="{{ url('photo_create') }}" title="{{ 'action.create'|trans }}">
                {{ 'action.create'|trans }}
            </a>

            {% for photo in pagination.items %}
                <tr>
                    <td>{{ photo.id }}</td>
                    <td>{{ photo.createdAt|format_date('long') }}</td>
                    <td>{{ photo.updatedAt|format_date('long') }}</td>
                    <td>{{ photo.title }}</td>
                    <td>{{ photo.gallery.title }}</td>
                    <td>
                        <a href="{{ url('photo_show', {id: photo.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                        <a href="{{ url('photo_edit', {id: photo.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a href="{{ url('photo_delete', {id: photo.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}