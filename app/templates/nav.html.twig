{# templates/_nav.html.twig #}
    <div>
        {% if app.user.avatar.filename is defined and app.user.avatar.filename|length %}
            <img class="nav-profile-img" src="{{ asset(avatars_directory~app.user.avatar.filename) }}" alt="avatar" style="
  width: 50px;
  height: 50px;">
        {% endif %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div>{{ app.user.email }}</div>
        <div>
            <a href="{{ url('app_logout') }}">{{ 'action_logout'|trans }}</a>
        </div>
    {% else %}
        <div>
            <a href="{{ url('app_login') }}">{{ 'action_login'|trans }}</a>
        </div>
    {% endif %}
    </div>
    <div>
        <a  href="{{ url('photo_index') }}" title="{{ 'all_photos'|trans }}">
            {{ 'all_photos'|trans }}
        </a>
    </div>
