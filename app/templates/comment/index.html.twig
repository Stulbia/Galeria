
{% block body %}
    <h2>{{ 'title.comment_list'|trans }}</h2>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

{#        <a href="{{ url('comment_create') }}" title="{{ 'action.create'|trans }}">#}
{#            {{ 'action.create'|trans }}#}
{#        </a>#}

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'comment.id') }}</th>
{#                <th>{{ knp_pagination_sortable(pagination, 'label.user'|trans, 'comment.user') }}</th>#}
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'comment.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'comment.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.content'|trans, 'comment.content') }}</th>
{#                <th>{{ knp_pagination_sortable(pagination, 'label_comment'|trans, 'comment.title') }}</th>#}
{#                <th>{{ 'label.comment'|trans }}</th>#}
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in pagination.items %}
                <tr>
                    <td>{{ comment.id }}</td>
{#                    <td>{{ comment.user }}</td>#}
                    <td>{{ comment.createdAt|format_date('long') }}</td>
                    <td>{{ comment.updatedAt|format_date('long') }}</td>
                    <td>{{ comment.content}}</td>

{#                    <td>#}
{#                        <a href="{{ url('comment_show', {id: comment.id}) }}" title="{{ 'action.show'|trans }}">#}
{#                            {{ 'action.show'|trans }}#}
{#                        </a>#}
{#                        <a href="{{ url('comment_edit', {id: comment.id}) }}" title="{{ 'action.edit'|trans }}">#}
{#                            {{ 'action.edit'|trans }}#}
{#                        </a>#}
{#                        <a href="{{ url('comment_delete', {id: comment.id}) }}" title="{{ 'action.delete'|trans }}">#}
{#                            {{ 'action.delete'|trans }}#}
{#                        </a>#}
{#                    </td>#}
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
{#            {{ 'message.empty_list'|trans }}#}

            {# ... #}
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.empty_list'|trans
            } %}
            {# ... #}
        </p>
    {% endif %}
{% endblock %}